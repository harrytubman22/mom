<h1>
  <%= @billionaire.name %>
</h1>

<div class= "row">

<p id="notice"><%= notice %></p>




<div class="col-md-6">
<%= image_tag @billionaire.avatar.url || 'avatar.jpg' %>

<p>
  <strong>Address:</strong>
  <%= @billionaire.address %>
</p>

<p>
  <strong>Net worth:</strong>
  $<%= @billionaire.net_worth %> Billion
</p>


<p>
  <strong>Industry:</strong>
  <%= @billionaire.industry %>
</p>

<p>
  <strong>Primary Coproration:</strong><br>
  <%=link_to ( image_tag @billionaire.corporation.avatar.url || 'avatar.jpg', class: 'avatar'), 
      @billionaire.corporation %> <br>
  <%= link_to @billionaire.corporation.name, @billionaire.corporation %>
</p>

<%= link_to 'Edit', edit_billionaire_path(@billionaire) %> |
<%= link_to 'Back', billionaires_path %>

</div>

<div class="col-md-6">

<iframe width="600" height="450" frameborder="0" 
style="border:0" 
src="https://www.google.com/maps/embed/v1/place?q=<%= @billionaire.address.parameterize %>
&key=AIzaSyDR8RIAUMrYjWTGAMSA57O_Av9sA008d50" allowfullscreen></iframe>

</div>
</div>