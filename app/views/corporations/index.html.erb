<h1>Listing corporations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Avatar</th>
      <th>Industry</th>
      <th>Phone number</th>
      <th>Web site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @corporations.each do |corporation| %>
      <tr>
        <td><%= corporation.name %></td>
        <td><%= corporation.address %></td>
        <td><%= corporation.avatar %></td>
        <td><%= corporation.industry %></td>
        <td><%= corporation.phone_number %></td>
        <td><%= corporation.web_site %></td>
        <td><%= link_to 'Show', corporation %></td>
        <td><%= link_to 'Edit', edit_corporation_path(corporation) %></td>
        <td><%= link_to 'Destroy', corporation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

